[user]
	email = ilya@lesikov.com
	name = Ilya Lesikov
[push]
	default = simple
[merge]
	tool = vimdiff
	renamelimit = 999999
[mergetool "vimdiff"]
	path = nvim
[core]
	pager = diff-so-fancy | less --tabs=4 -RX
	hooksPath = /home/user1/.githooks
[rebase]
	instructionFormat = (%an <%ae>) %s
[merge "ours"]
	driver = true
[interactive]
	diffFilter = diff-so-fancy --patch
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
